{

	"App":{		
		"frameRate" : 60,
		"showMouse" : true,
		"enableMouse" : false,
		"maxThreads" : 2,
		"window":{
			"windowMode" : 1,
			"customWindow" : false,
			"customWidth": 1024,
			"customHeight": 768,
			"customPositionX" : 0,
			"customPositionY" : 0
		},		
		"render":{
			"width" : 1920,
			"height" : 1080
		}
	},

	"Assets":{
		"textures" : "images"
	},

	"RemoteUI":{
		"columnWidth" : 400,
		"uiScale" : 1.0,
		"useFontStash" : true,
		"fontSize" : 15,
		"fontFile" : "fonts/VeraMono-Bold.ttf",
		"useFontStash" : true,
		"saveSettingsOnQuit" : true,
		"showUiDuringEdits" : true,
		"paramWatches" : {
			"debug" : true,
			"myColor" : false
		}
	},

	"TimeMeasurements":{
		"enabled" : true,
		"uiScale" : 1.0,
		"threadTimeDecay" : 0.985,
		"frameRate" : 60,
		"fontSize" : 13,
		"fontFile" : "fonts/VeraMono.ttf",
		"useFontStash" : true,
		"msPrecision" : 1,
		"plotResolution" : 1.0,
		"plotH" : 60,
		"removeExpiredThreads" : true,
		"removeExpiredTimings" : false,
		"widgetLocation" : 3,
		"percentageAsGraph" : true
	},
	
	"logging":{
		"uiScale": 1.0,
		"toScreen": true,
		"toFile" : true,
		"deleteOldLogs" : true,
		"logExpirationInDays" : 365,
		"fontSize" : 15,
		"logPanelWidth" : 0.33,
		"maxScreenLines" : 4000
	},

	"tuio":{
		"enabled" : true,
		"port" : 3333
	},

	"content":{
		"urls": {
			"content-json-url": "https://github.com/adobe-fonts/source-code-pro/issues",
			"content-url": "https://github.com/adobe-fonts/source-code-pro/issues"
  		}
	}
}
