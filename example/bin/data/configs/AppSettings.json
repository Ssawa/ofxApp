{

	"App":{		
		"frameRate" : 60,
		"numAASamples" : 8,
		"showMouse" : true,
		"enableMouse" : false,
		"maxThreads" : 5,
		"window":{
			"windowMode" : 1, //see ofxScreenSetup::ScreenMode; windowed=8, fullOneMonitor=1, fullAllMonitors=0
			"customWindow" : false,
			"customWidth": 1024,
			"customHeight": 768,
			"customPositionX" : 0,
			"customPositionY" : 0
		},		
		"render":{ //TBD
			"width" : 1920,
			"height" : 1080
		},
		"mullions": {
			"numX" : 4,
			"numY" : 4,
			"visibleAtStartup" : false
		},
		"onErrorContactMessage": "call 911"
	},

	"StateMachine":{
		"onErrorRetryCount" : 0,
		"onErrorWaitTimeSec" : 10
	},

	"Fonts":{
		"ofxApp":{ //required by ofxApp, dont remove the "monospaced" & "monospacedBold" sections!
			"monospaced":{
				"fontFile" : "fonts/VeraMono.ttf",
				"atlasSize" : 512,
				"lineHeight" : 1.4,
				"mipmaps" : false,
				"mipmapPadding" : 0,
				"uiScale" : 1.0
			},

			"monospacedBold":{
				"fontFile" : "fonts/VeraMono-Bold.ttf",
				"atlasSize" : 512,
				"lineHeight" : 1.4,
				"mipmaps" : false,
				"mipmapPadding" : 0,
				"uiScale" : 1.0
			}
		},
		
		"user":{ //place your custom fonts here
			"NoManSky":{
				"fontFile" : "fonts/geonms-webfont.ttf",
				"atlasSize" : 512,
				"lineHeight" : 1.3,
				"mipmaps" : false,
				"mipmapPadding" : 0,
				"uiScale" : 1.0
			}
		}

	},


	"StaticAssets":{
		"textures" : "images" //this is where the static assets live; under "data"
	},

	"RemoteUI":{
		"columnWidth" : 400,
		"uiScale" : 1.0,
		"useFontStash" : true,
		"fontSize" : 15,
		"fontFile" : "fonts/VeraMono-Bold.ttf",
		"saveSettingsOnQuit" : true,
		"showUiDuringEdits" : true,
		"paramWatches" : {
			"debug" : true
			//"myColor" : false
		}
	},

	"TimeMeasurements":{
		"enabled" : false,
		"uiScale" : 1.0,
		"threadTimeDecay" : 0.985,
		"frameRate" : 60,
		"fontSize" : 13,
		"fontFile" : "fonts/VeraMono.ttf",
		"useFontStash" : true,
		"msPrecision" : 1,
		"plotResolution" : 1.0,
		"plotH" : 60,
		"removeExpiredThreads" : true,
		"removeExpiredTimings" : false,
		"widgetLocation" : 3,
		"percentageAsGraph" : true
	},
	
	"logging":{
		"toScreen": true,
		"toFile" : true,
		"toConsole" : true,
		"deleteOldLogs" : true,
		"logExpirationInDays" : 1,
		"useFontStash" : true,
		"fontSize" : 15,
		"uiScale": 1.0,
		"screenLogPanelWidth" : 0.5,
		"maxScreenLines" : 4000,
		"ThreadSafeLog" : {
			"alsoPrintToConsole" : true
		}
	},

	"tuio":{
		"enabled" : true,
		"port" : 3333
	},

	"downloads":{
		"proxy":{
			"useProxy" : false,
			"proxyHost": "",
			"proxyPort": 8080,
			"proxyUser" : "",
			"proxyPassword" : ""
		},
		"credentials":{
			"username": "",
			"password": ""
		},
		"customHeaders":{ //not implemented
			//"myHeaderName" : "myHeaderContent",
		},
		"verbose" : false,
		"maxConcurrentDownloads": 5,
		"userAgent" : "", //not implemented
		"timeOutSec" : 10,
		"speedLimitKb" : 0, //per download - 0 means no limit
		"idleTimeAfterEachDownloadSec" : 0.0
	},

	"content":{
		"JsonSources":{ // TODO! multiple parsing passes with different data sources!
			"CH" : "file://testJson/ch_small.json",
			"CWRU" : "file://testJson/cwru.json"
		},
		"urls": {
			"jsonContentURL": "file://testJson/ch_small.json" 
			//"jsonContentURL": "file://testJson/cwru.json" 
  		}, 
  		"jsonDownloadDir": "jsonDownloads",
  		"assetsLocation": "assets",  //all assets will be in that folder, with a sub-folder (named after the object ID) per each content object
  		
  		"AssetDownloadPolicy":{ //asset should be downloaded if...
  			"fileMissing" : true,
  			"fileTooSmall" : true,
  			"fileExistsAndNoSha1Provided" : true,
  			"fileExistsAndProvidedSha1Missmatch" : true,
  			"fileExistsAndProvidedSha1Match" : false //no need to re-download if file is on disk and sha1's match
  		},

  		"AssetUsagePolicy":{ //asset should be Used if...
  			"fileMissing" : false,
  			"fileTooSmall" : false,
  			"fileExistsAndNoSha1Provided" : false,
  			"fileExistsAndProvidedSha1Missmatch" : false,
  			"fileExistsAndProvidedSha1Match" : true
  		},

  		"ObjectUsagePolicy":{ //an JSON object should only be used if...
  			"allAssetsAreOK" : true, //if true, an object can only be used if ALL assets are OK
  			"minNumberImgAssets" : 1, //ie. if there are < N image assets, object will be rejected
  			"minNumberVideoAssets" : 0,
  			"minNumberAudioAssets" : 0
  		}
	}
}
